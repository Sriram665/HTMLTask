    <!-- Task 1: User Registration Form with Validation -->
    <h1>Welcome to WSP</h1>
    <h3>Manage, Streamline and Thrive Effortlessly</h3>
    <form action="/submit_registration" method="post">

        <label for="email">Email:</label>
        <input type="email" id="email" name="email" required><br><br>

        <label for="password">Password:</label>
        <input type="password" id="password" name="password" required><br><br>

        <input type="checkbox" id="remember_me" name="remember_me">
        <label for="remember_me">Remember me</label>
        <a href="#" style="margin-left: 10px;">Login with Code</a><br><br>

        <input type="submit" value="Sign in">
    </form>

    <script>
        // Task 1: Validation for Password Match
        const form = document.querySelector('form');
        form.addEventListener('submit', function(event) {
            const password = document.getElementById('password').value;
            const confirmPassword = document.getElementById('confirm_password').value;
            if (password !== confirmPassword) {
                alert('Passwords do not match!');
                event.preventDefault();
            }
        });
    </script>

    <!-- Task 2: Video and Audio Player -->
